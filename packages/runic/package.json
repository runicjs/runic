{
  "name": "@runicjs/runic",
  "description": "A lightweight and type-safe vanilla JS state management library",
  "version": "0.1.5",
  "type": "module",
  "license": "MIT",
  "repository": "github:runicjs/runic",
  "bugs": "https://github.com/runicjs/runic/issues",
  "keywords": [
    "runic",
    "state",
    "simple",
    "immutable",
    "typescript",
    "vanilla"
  ],
  "authors": [
    "Will Bowers <william.bowers@gmail.com> (https://github.com/willurd)"
  ],
  "main": "dist/index.js",
